@define-color mantle #181825;
@define-color crust #11111b;

* {
  font-size: 12px;
  font-family: "Monaspace Krypton";
}

window#waybar {
  background-color: transparent;
}

#workspaces {
  background: @base;
  margin-left: 8px;
  margin-top: 10px;
  border-radius: 8px;
}

#workspaces button {
  box-shadow: none;
  text-shadow: none;
  padding: 0px;
  border-radius: 8px;
  padding-left: 2px;
  color: @text;
  padding-right: 2px;
  border: none;
}

#workspaces button.active {
  color: @pink;
  background: @surface1;
}

#workspaces button:hover {
  background: @surface1;
  border: none;
}

#clock {
  color: @text;
  padding: 0px;
  margin-top: 10px;
  padding-left: 8px;
  border-radius: 8px;
  padding-right: 8px;
  background-color: @base;
}

#tray {
  margin-top: 10px;
  background: @base;
  margin-left: 6px;
  padding: 0;
  border-radius: 8px;
  padding-left: 8px;
  padding-right: 8px;
  color: @text;
}

#power-profiles-daemon {
  background: @base;
  margin-top: 10px;
  margin-right: 6px;
  padding: 0;
  padding-left: 8px;
  padding-right: 8px;
  border-radius: 8px;
}

#power-profiles-daemon.balanced {
  color: @sky;
}

#power-profiles-daemon.performance {
  color: @yellow;
}

#power-profiles-daemon.power-saver {
  color: @green;
}

#battery {
  color: @text;
  margin-top: 10px;
  padding: 0;
  background: @base;
  padding-left: 8px;
  border-radius: 8px;
  padding-right: 8px;
  margin-right: 6px;
}

#pulseaudio {
  color: @text;
  margin-top: 10px;
  padding: 0;
  background: @base;
  padding-left: 8px;
  border-radius: 8px;
  padding-right: 8px;
  margin-right: 6px;
}

#custom-poweroff {
  color: @red;
  margin-top: 10px;
  padding: 0;
  background: @base;
  padding-left: 8px;
  border-radius: 8px;
  padding-right: 8px;
  margin-right: 8px;
}

#custom-logout {
  color: @yellow;
  margin-top: 10px;
  padding: 0;
  background: @base;
  padding-left: 8px;
  border-radius: 8px;
  padding-right: 8px;
  margin-right: 6px;
}
